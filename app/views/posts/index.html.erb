<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h2> <%= image_tag post.image.url(:thumb) %> </h2>
    <h3> <%= post.description %> </h3>
    <% if current_user %>
      <%= link_to "Comment", new_post_comment_path(post) %>
      <%= link_to "Edit picture", edit_post_path(post) %>
      <%= link_to "Delete picture", post_path(post), method: :delete %>
    <% end %>
    <h6> Comments: <h6>
      <% if post.comments.any? %>
        <ul>
          <% post.comments.each do |comment| %>
            <li>
              <%= comment.comment %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p> No comments... yet! </p>
      <% end %>
  <% end %>
<% else %>
  No pictures yet
<% end %>
<a href='posts/new'> Add a picture </a>
